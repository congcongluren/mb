{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@assets/*": ["assets/*"],
            "@redux/*": ["src/redux/*"],
            "@components/*": ["src/components/*"],
            "@publicComponents/*": ["src/publicComponents/*"],
            "@containers/*": ["src/containers/*"],
            "@api/*": ["src/api/*"],
            "@actions/*": ["src/redux/actions/*"],
            "@features/*": ["src/redux/features/*"],
            "@recoil/*": ["src/recoil/*"],
            "@utils/*": ["src/utils/*"],
            "@pages/*": ["src/pages/*"],
            "@store/*": ["src/store/*"]
        },
        "target": "es6",
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "dist"]
}
